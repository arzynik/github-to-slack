{
	"name": "github-to-slack",
	"description": "forward ticket closures and their closing messages only to slack",
	"keywords": [
		"github",
		"slack"
	],
	"repository": "https://github.com/arzynik/github-to-slack",
	"env": {
		"SLACK_WEBHOOK_URL": {
			"description": "Webhook url generated at https://TEAMDOMAIN.slack.com/services/new/incoming-webhook",
			"value": "",
			"required": true
		},
		"SLACK_CHANEL": {
			"description": "Channel overwrite with hash prefix.",
			"value": "",
			"required": false
		},
		"SLACK_USERNAME": {
			"description": "Username of the bot.",
			"value": "GitHub",
			"required": false
		},
		"SLACK_ICON_URL": {
			"description": "Icon url of the bot. ",
			"value": "https://assets-cdn.github.com/images/modules/logos_page/GitHub-Mark.png",
			"required": false
		},
		"SLACK_ICON_EMOJI": {
			"description": "Emoji iconcon of the bot.",
			"value": "",
			"required": false
		},
		"SLACK_AUTHOR_NAMETYPE": {
			"description": "First, last, full, or login. Sends an additional request to github to get users names.",
			"value": "first",
			"required": true
		}
	}
}